<%is_manager =  (current_user.user_type=="manager")%>
<%if is_manager%>
  <div class="row">
    <h1 class="col-md-9"><%= current_user.name+"\'s "%>Projects</h1>
      <%= link_to "Create New Project", new_project_path, :class=>"col-md-3 btn btn-primary"%>
  </div>
  <hr/>
<%end%>
<div class="row">
  <%@projects.each do |p| %>
  	<div class="col-md-4">
  	  <div class="card">
  	      <%= link_to (is_manager)? p : new_bug_path(:project_id=>p.id),:class=>"btn" do%>
            <h3 class="card-header bg-info text-white"><%= p.name %></h3>
            <p class="card-body text-justify"><%= p.description %></p>
            <div class="card-footer text-left">
              <div class="row">
                <div class="col-md-5">Developers</div>
                <div class="col-md-1"><%=p.users.where(user_type:'developer').count%></div>
                <div class="col-md-4">Q.As</div>
                <div class="col-md-1"><%=p.users.where(user_type:'qa').count%></div>
              </div>
              <div class="row">
                <div class="col-md-5">Features</div>
                <div class="col-md-1"><%=p.bugs.where(bug_type:'feature').count%></div>
                <div class="col-md-4">Bugs</div>
                <div class="col-md-1"><%=p.bugs.where(bug_type:'bug').count%></div>
              </div>
            </div>
          <%end%>
        </div>
      <hr>
    </div>
  <%end%>
</div>