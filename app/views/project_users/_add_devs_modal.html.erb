<!-- Modal -->
<div class="modal fade" id="add_dev_modal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
    
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add Developer to project</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      
      <!-- Modal body -->
      <div class="modal-body">
	      <% devs = User.where(user_type:'developer') %>
		    <ul class="list-group">
			    <% devs.each do |dev| %>
  			    <% if(!dev.projects.include?(@project))%>
  			      <li class="list-group-item d-flex justify-content-between align-items-center" id="<%=dev.id%>"> <%=dev.name%>
  				      <% p dev.name%> 
  				      <button class="btn btn-primary" onclick="add_user(<%=dev.id%>,<%=@project.id%>)">Add</button>
  			      </li>
  			    <%end%>
			    <%end%>
		    </ul>
	    </div>
      
    </div>
  </div>
</div>