<!-- The Modal -->
  <div class="modal fade" id="add_qa_modal">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add QA to project</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
		  <% qas = User.where(user_type:'qa') %>
			<ul class="list-group">
  			  <% qas.each do |qa| %>
    			<% if(!qa.projects.include?(@project))%>
    			  <li class="list-group-item d-flex justify-content-between align-items-center" id="<%=qa.id%>"> <%=qa.name%> 
    				<button class="btn btn-primary" onclick="add_user(<%=qa.id%>,<%=@project.id%>)">Add</button>
    			  </li>
    			<%end%>
  			  <%end%>
			</ul>
		</div>
        
      </div>
    </div>
  </div>

